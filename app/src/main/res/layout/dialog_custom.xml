<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation = "vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:weightSum="100"
        android:background="#e1fc4c50">

        <ImageView
            android:layout_width="45dp"
            android:src="@drawable/logo"
            android:layout_weight="20"
            android:background="#e1fc4c50"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/title"
            android:text="TEXTO TÍTULO"
            android:layout_weight="80"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msg"
            android:text="Elija el diseño que más le acomode"

            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:background="#b46371ff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:weightSum="100"
        android:background="#b46371ff">
        <Button
            android:id="@+id/btn_neg"
            android:layout_weight="50"
            android:textColor="#b46371ff"
            android:background="#dbffffff"

            android:textStyle="bold"
            android:text="BTN NEG"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_pos"
            android:textColor="#b46371ff"
            android:background="#dbffffff"

            android:textStyle="bold"
            android:text="BTN POS"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>